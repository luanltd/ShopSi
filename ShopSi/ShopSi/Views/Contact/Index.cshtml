                    <div class="form-group">
                        <label style="color: #816263">Khách hàng:</label>
                        <input style="color: #816263" name="name" class="form-control" placeholder="Name" required />
                    </div>
                    <div class="form-group">
                        <label style="color: #816263">Số điện thoại:</label>
                        <input style="color: #816263" name="phone" class="form-control" placeholder="Phone" required />
                    </div>
                    <div class="form-group">
                        <label style="color: #816263">Địa chỉ:</label>
                        <input style="color: #816263" name="address" class="form-control" placeholder="Address" required/>
                    </div>
                    <div class="form-group">
                        <label style="color: #816263">Email:</label>
                        <input style="color: #816263" name="email" class="form-control" placeholder="Email" required/>
                    </div>                  
                </div>
                <div class="contact-right">
                    <div class="form-group">
                        <label style="color: #816263">Nội dung phản hồi:</label>
                        <textarea placeholder="Message" required name="content"></textarea>
                    </div>
                </div>
                <div class="clearfix"></div>
                <button type="submit" class="btn" style="color: white;background-color: #816263">Gửi phản hồi</button>
           }
        </div>
    </div>
</div>
